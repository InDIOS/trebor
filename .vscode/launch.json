			"file": "${workspaceFolder}/todomvc/dist/index.html"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Generator",
			"program": "${workspaceFolder}/src/index.ts",
			"outFiles": [
				"${workspaceFolder}/build/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch CLI",
			"program": "${workspaceFolder}/bin/trebor.js",
