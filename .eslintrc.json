{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "amd": true
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-const-assign": "error",
    "no-this-before-super": "warn",
    "no-undef": "error",
    "semi": "warn",
    "eqeqeq": [
      "warn",
      "smart"
    ],
    "no-unreachable": "error",
    "no-unused-vars": "warn",
    "constructor-super": "warn",
    "valid-typeof": "error"
  }
}